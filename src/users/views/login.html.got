<section class="narrow">

<form action="/users/login" method="post">
    <h1>Login</h1>
    {{ field "Email or Username" "email" "" "text" }}
    {{ field "Password" "password" "" "password" "type=password" }}

    <div class="actions">
        <input type="submit" class="button" value="Login">
    </div>
</form>
</section>
